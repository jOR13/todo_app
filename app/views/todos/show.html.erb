<h1><%= @todo.task %></h1>
<p><%= @todo.completed %></p>
<ul>
  <li><%= link_to "Edit", edit_todo_path(@todo) %></li>
  <li><%= link_to "Destroy", todo_path(@todo), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>


<h2>Notes</h2>
<%= render @todo.comments %>

<h2>Add a note:</h2>
<%= render 'comments/form' %>
