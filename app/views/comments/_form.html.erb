<%= form_with model: [ @todo, @todo.comments.build ] do |form| %>
  <p>
    <%= form.label :note %><br>
    <%= form.text_area :note %>
  </p>
  <p>
    <%= form.label :status %><br>
    <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
  </p>
  <p class="button">
    <%= form.submit %>
  </p>
<% end %>